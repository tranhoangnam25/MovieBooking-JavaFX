<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.csdl.moviebooking.controller.DashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="1000.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Label text="CINEMA 13" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="tfTimKiem" prefHeight="35.0" prefWidth="300.0" promptText="Tìm kiếm phim..." style="-fx-background-radius: 20; -fx-padding: 0 15;" />
                        <Button onAction="#handleSearch" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 20;" text="Tìm" />
                    </children>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="lblXinChao" text="Xin chào, Khách hàng" textFill="#bdc3c7">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="15.0" />
                    </HBox.margin>
                </Label>

                <Button onAction="#handleHistory" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-font-weight: bold; -fx-cursor: hand;" text="Lịch sử vé">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>

                <Button onAction="#handleLogout" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 5; -fx-text-fill: white;" text="Đăng xuất" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Phim Đang Chiếu" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="movieContainer" hgap="20.0" vgap="20.0" prefWrapLength="900.0" style="-fx-padding: 10;">
                        </FlowPane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>