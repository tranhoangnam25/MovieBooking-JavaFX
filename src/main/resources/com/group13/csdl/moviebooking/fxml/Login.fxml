<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.csdl.moviebooking.controller.LoginController">
    <children>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: #2c3e50;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="CINEMA 13">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Text>
                <Text fill="#bdc3c7" strokeType="OUTSIDE" strokeWidth="0.0" text="Hệ thống đặt vé xem phim trực tuyến">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Text>
            </children>
        </VBox>

        <VBox alignment="CENTER_LEFT" layoutX="350.0" prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label text="Đăng Nhập" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </Label>

                <Label text="Tài khoản" textFill="#7f8c8d">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="tfTaiKhoan" promptText="Nhập tài khoản của bạn" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10;">
                    <VBox.margin>
                        <Insets bottom="15.0" top="5.0" />
                    </VBox.margin>
                </TextField>

                <Label text="Mật khẩu" textFill="#7f8c8d">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="pfMatKhau" promptText="Nhập mật khẩu" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10;">
                    <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                    </VBox.margin>
                </PasswordField>

                <Label fx:id="lblMessage" textFill="#e74c3c" wrapText="true">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <Button fx:id="btnDangNhap" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="320.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="ĐĂNG NHẬP">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>

                <VBox alignment="CENTER" spacing="10.0">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <children>
                        <Hyperlink text="Quên mật khẩu?" textFill="#7f8c8d" />
                        <Hyperlink fx:id="linkDangKy" onAction="#switchToRegister" text="Chưa có tài khoản? Đăng ký ngay" textFill="#3498db" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>