<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.csdl.moviebooking.controller.ManageScheduleController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 5; -fx-text-fill: white; -fx-cursor: hand;" text="&lt; Quay lại Admin Dashboard" />
                <Label text="Quản Lý Lịch Chiếu (Suất Chiếu)" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <VBox layoutX="20.0" layoutY="20.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Tạo Suất Chiếu Mới" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Chọn Phim:" textFill="#7f8c8d" />
                                <ComboBox fx:id="cbPhim" maxWidth="1.7976931348623157E308" promptText="-- Chọn phim --" />
                            </children>
                        </VBox>

                        <HBox spacing="10.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Phòng chiếu:" textFill="#7f8c8d" />
                                        <ComboBox fx:id="cbPhong" maxWidth="1.7976931348623157E308" promptText="Chọn phòng" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Giá vé (VNĐ):" textFill="#7f8c8d" />
                                        <TextField fx:id="tfGiaVe" promptText="VD: 100000" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Ngày chiếu:" textFill="#7f8c8d" />
                                <DatePicker fx:id="dpNgayChieu" maxWidth="1.7976931348623157E308" promptText="Chọn ngày" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Giờ bắt đầu (HH:mm):" textFill="#7f8c8d" />
                                <TextField fx:id="tfGioChieu" promptText="VD: 19:30" />
                                <Label text="Định dạng 24h (Ví dụ: 09:00, 14:30)" textFill="#95a5a6">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <Label fx:id="lblMessage" textFill="#e74c3c" wrapText="true" />

                        <HBox spacing="10.0">
                            <children>
                                <Button fx:id="btnThem" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleThem" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Thêm Suất Chiếu" HBox.hgrow="ALWAYS" />
                                <Button fx:id="btnXoa" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleXoa" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Xóa" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLamMoi" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Làm mới" />
                    </children>
                </VBox>

                <TableView fx:id="tableSuatChieu" layoutX="380.0" prefHeight="600.0" prefWidth="680.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="370.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="colID" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colPhim" prefWidth="200.0" text="Tên Phim (ID)" />
                        <TableColumn fx:id="colPhong" prefWidth="80.0" text="Phòng" />
                        <TableColumn fx:id="colThoiGian" prefWidth="150.0" text="Thời Gian" />
                        <TableColumn fx:id="colGiaVe" prefWidth="100.0" text="Giá Vé" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </center>
</BorderPane>