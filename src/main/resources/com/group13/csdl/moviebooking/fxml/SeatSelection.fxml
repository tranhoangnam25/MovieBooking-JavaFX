<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.csdl.moviebooking.controller.SeatSelectionController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 5; -fx-text-fill: white; -fx-cursor: hand;" text="&lt; Quay lại" />
                <VBox alignment="CENTER_LEFT">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                    <children>
                        <Label text="Chọn Ghế Ngồi" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblThongTinSuat" text="Tên Phim - Giờ Chiếu - Phòng" textFill="#bdc3c7" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <children>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#95a5a6" height="10.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="400.0" />
                        <Label text="MÀN HÌNH" textFill="#95a5a6">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox alignment="CENTER" style="-fx-background-color: #f4f4f4;">
                            <children>
                                <GridPane fx:id="gridGhe" alignment="CENTER" hgap="10.0" vgap="10.0">
                                </GridPane>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="20.0" stroke="#bdc3c7" strokeType="INSIDE" width="20.0" />
                                <Label text="Ghế trống" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#e74c3c" height="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="20.0" />
                                <Label text="Đã bán" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2ecc71" height="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="20.0" />
                                <Label text="Đang chọn" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#95a5a6" height="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="20.0" />
                                <Label text="Bảo trì" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="80.0" spacing="20.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 0, -5, 0, 0);" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
            <children>
                <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Ghế đang chọn:" textFill="#7f8c8d" />
                        <Label fx:id="lblGheChon" text="Chưa chọn ghế nào" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <VBox alignment="CENTER_RIGHT">
                    <children>
                        <Label text="Tổng tiền tạm tính:" textFill="#7f8c8d" />
                        <Label fx:id="lblTongTien" text="0 VNĐ" textFill="#e74c3c">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Button fx:id="btnTiepTuc" disable="true" mnemonicParsing="false" onAction="#handleConfirm" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="TIẾP TỤC" />
            </children>
        </HBox>
    </bottom>
</BorderPane>